{
  "name": "mini-games-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npm install --workspaces --include-workspace-root",
    "dev:fe": "npm run dev --workspace=game-frontend",
    "dev:be": "npm run start:dev --workspace=game-backend",
    "build": "npm -ws run build",
    "lint": "echo 'add eslint later'",
    "test": "echo 'add tests later'"
  }
}